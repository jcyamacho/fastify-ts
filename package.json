{
  "name": "fastify-ts",
  "version": "0.1.0",
  "description": "fastify typescript",
  "main": "dist/app.js",
  "engines": {
    "node": "^12.16.1",
    "npm": "^6.13.7"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "prebuild": "npm-run-all -p clean lint",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src",
    "test": "jest --detectOpenHandles --forceExit --runInBand",
    "pretest": "npm run lint",
    "start": "fastify start -l info dist/app.js",
    "dev": "fastify start -l info -P dist/app.js",
    "predev": "npm run build",
    "cz": "git-cz"
  },
  "author": "Juan C. Yamacho <jcyamacho@gmail.com>",
  "license": "MIT",
  "keywords": [
    "fastify",
    "typescript"
  ],
  "dependencies": {
    "env-schema": "^1.1.0",
    "fastify": "^2.14.1",
    "fastify-autoload": "^1.2.2",
    "fastify-cli": "^1.5.0",
    "fastify-compress": "^2.0.1",
    "fastify-cors": "^3.0.3",
    "fastify-helmet": "^3.0.2",
    "fastify-plugin": "^1.6.1",
    "fastify-swagger": "^2.6.0",
    "fluent-schema": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^12.12.41",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-sonar-reporter": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "prepare-commit-msg": "exec < /dev/tty && npm run cz -- --hook || true"
    }
  }
}
